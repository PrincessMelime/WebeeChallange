<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mobile_navigation"
            app:startDestination="@id/newDeviceFragment">

    <fragment
            android:id="@+id/newDeviceFragment"
            android:name="com.webee.challange.view.fragment.NewDeviceFragment"
            android:label="New Device" >
        <action
                android:id="@+id/action_weatherFragment_to_settingsFragment"
                app:destination="@id/deviceListFragment"
                app:popUpTo="@id/deviceListFragment" />


    </fragment>
    <fragment
            android:id="@+id/deviceListFragment"
            android:name="com.webee.challange.view.fragment.DeviceListFragment"
            android:label="Device List">
        <action
                android:id="@+id/action_weatherFragment_to_settingsFragment"
                app:destination="@id/weatherFragment"
                app:popUpTo="@id/weatherFragment" />

    </fragment>

    <fragment
            android:id="@+id/weatherFragment"
            android:name="com.webee.challange.view.fragment.WeatherFragment"
            android:label="Weather" />


</navigation>